{
  "name": "opencode-evals",
  "version": "0.1.0",
  "description": "Lightweight evaluation framework for OpenCode plugins",
  "type": "module",
  "bin": {
    "opencode-eval": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./types": "./dist/types.js",
    "./vcs-helpers": "./dist/vcs-helpers.js",
    "./jj-helpers": "./dist/jj-helpers.js"
  },
  "scripts": {
    "build": "bun build src/index.ts src/vcs-helpers.ts src/jj-helpers.ts --outdir dist --target node",
    "dev": "bun run src/index.ts",
    "test": "bun test",
    "eval": "bun run src/index.ts run examples/"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.52.0",
    "@opencode-ai/sdk": "^1.1.12",
    "commander": "^13.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "bun": ">=1.0.0"
  },
  "files": [
    "dist",
    "fixtures"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/edmundmiller/opencode-evals"
  },
  "license": "MIT"
}
